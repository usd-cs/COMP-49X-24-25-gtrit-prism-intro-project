@page "/wfposts/delete"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using IntroProject.Models
@inject IDbContextFactory<IntroProject.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>WFPost</h2>
    <hr />
    @if (wfpost is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@wfpost.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Content</dt>
            <dd class="col-sm-10">@wfpost.Content</dd>
        </dl>
        <EditForm method="post" Model="wfpost" OnValidSubmit="DeleteWFPost" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(wfpost is null)">Delete</button> |
            <a href="/wfposts">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private WFPost? wfpost;

    [SupplyParameterFromQuery]
    private int PostId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        wfpost = await context.Posts.FirstOrDefaultAsync(m => m.PostId == PostId);

        if (wfpost is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteWFPost()
    {
        using var context = DbFactory.CreateDbContext();
        context.Posts.Remove(wfpost!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/wfposts");
    }
}
